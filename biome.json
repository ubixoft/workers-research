{
	"$schema": "https://biomejs.dev/schemas/1.9.0/schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
		"ignoreUnknown": false,
		"ignore": ["dist/*", "src/forms/templates/*", "src/forms/precompiled.mjs"]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab"
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"suspicious": {
				"noAssignInExpressions": "off",
				"noExplicitAny": "off",
				"noImplicitAnyLet": "off"
			},
			"style": {
				"noUnusedTemplateLiteral": "off",
				"useTemplate": "off",
				"useSelfClosingElements": "off",
				"noUselessElse": "off"
			},
			"complexity": {
				"noStaticOnlyClass": "off",
				"noBannedTypes": "off",
				"noForEach": "off"
			},
			"a11y": {
				"useButtonType": "off",
				"noSvgWithoutTitle": "off",
				"useSemanticElements": "off",
				"noLabelWithoutControl": "off",
				"useAltText": "off"
			},
			"correctness": {
				"useJsxKeyInIterable": "off",
				"noUnknownProperty": "off"
			}
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double"
		}
	}
}
